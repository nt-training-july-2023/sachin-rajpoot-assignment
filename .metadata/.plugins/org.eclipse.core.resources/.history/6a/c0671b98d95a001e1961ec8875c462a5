package com.gms.demo.payload;

import static org.junit.Assert.assertEquals;
import static org.junit.Assert.assertFalse;
import static org.junit.Assert.assertNotEquals;
import static org.junit.Assert.assertTrue;

import org.junit.Test;
import org.junit.jupiter.api.BeforeEach;

import com.gms.demo.entity.Status;
import com.gms.demo.payloads.CommentDto;
import com.gms.demo.payloads.TicketUpdateStatusInDto;

public class TicketUpdateStatusInDtoTest {
	   private TicketUpdateStatusInDto ticketUpdateStatusInDto1;
	    private TicketUpdateStatusInDto ticketUpdateStatusInDto2;
//	    CommentDto commentDto = new CommentDto(, null, null, null, null)

	    @BeforeEach
	    public void setUp() {
	        ticketUpdateStatusInDto1 = new TicketUpdateStatusInDto(Status.OPEN, new CommentDto());
	        ticketUpdateStatusInDto2 = new TicketUpdateStatusInDto(Status.CLOSED, new CommentDto());
	    }

	    @Test
	    public void testGettersAndSetters() {
	        // Test getters and setters for status
	        assertEquals(Status.OPEN, ticketUpdateStatusInDto1.getStatus());
	        ticketUpdateStatusInDto1.setStatus(Status.CLOSED);
	        assertEquals(Status.CLOSED, ticketUpdateStatusInDto1.getStatus());

	        // Test getters and setters for comment
	        assertEquals(new CommentDto(), ticketUpdateStatusInDto1.getComment());
	        ticketUpdateStatusInDto1.setComment(new CommentDto());
	        assertEquals(new CommentDto(), ticketUpdateStatusInDto1.getComment());
	    }

	    @Test
	    public void testHashCode() {
	        assertEquals(ticketUpdateStatusInDto1.hashCode(), ticketUpdateStatusInDto1.hashCode());
	        assertNotEquals(ticketUpdateStatusInDto1.hashCode(), ticketUpdateStatusInDto2.hashCode());
	    }

	    @Test
	    public void testEquals() {
	        assertTrue(ticketUpdateStatusInDto1.equals(ticketUpdateStatusInDto1));
	        assertFalse(ticketUpdateStatusInDto1.equals(null));
	        assertFalse(ticketUpdateStatusInDto1.equals("Not a TicketUpdateStatusInDto"));

	        assertFalse(ticketUpdateStatusInDto1.equals(ticketUpdateStatusInDto2));
	        assertFalse(ticketUpdateStatusInDto2.equals(ticketUpdateStatusInDto1));

	        TicketUpdateStatusInDto ticketUpdateStatusInDto3 = new TicketUpdateStatusInDto(Status.OPEN, new CommentDto("Comment 1"));
	        assertTrue(ticketUpdateStatusInDto1.equals(ticketUpdateStatusInDto3));
	        assertTrue(ticketUpdateStatusInDto3.equals(ticketUpdateStatusInDto1));
	    }

	    @Test
	    public void testToString() {
	        assertEquals("TicketUpdateStatusInDto [status=OPEN, comment=CommentDto [comment=Comment 1]]", ticketUpdateStatusInDto1.toString());
	    }
}
